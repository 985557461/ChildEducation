<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.xiaoyu.HeartConsultation.widget.VerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <!--滑动的ViewPager-->
            <com.xiaoyu.HeartConsultation.widget.SlideShowView
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:layout_margin="10dp"
                    android:id="@+id/slideShowView"/>
            <!--第一行-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp">
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:id="@+id/aiQing">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="爱情"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_aiqing"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/caiFu">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="财富"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_caifu"
                            android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>

            <!--第二行-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp">
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:id="@+id/sheJiao">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="社交"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_shejiao"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/xingGe">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="性格"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_xingge"
                            android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>

            <!--第三行-->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp">
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:id="@+id/nengLi">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="能力"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_nengli"/>
                </FrameLayout>
                <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/jiaTing">
                    <TextView
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:text="家庭"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                    <ImageView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@drawable/icon_jiating"
                            android:layout_gravity="right"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xiaoyu.HeartConsultation.widget.VerticalScrollView>
</LinearLayout>