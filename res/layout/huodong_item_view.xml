<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffefe">
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp">
        <ImageView
                android:layout_width="102dp"
                android:layout_height="66dp"
                android:id="@+id/image"
                android:layout_marginRight="10dp"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:textColor="#434242"
                    android:textSize="14sp"
                    android:text="3W公开课你来吗？"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <!--地址 免费-->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="12dp">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center_vertical">
                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_location_red"
                                android:layout_marginRight="10dp"/>
                        <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="海淀"
                                android:textColor="#434242"
                                android:textSize="13sp"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#f9ba84"
                            android:text="免费"
                            android:layout_marginRight="30dp"/>
                </LinearLayout>
                <!--时间 查看次数-->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center_vertical">
                        <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_time_red"
                                android:layout_marginRight="10dp"/>
                        <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="06/13"
                                android:textColor="#434242"
                                android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:gravity="center_vertical">
                        <ImageView
                                android:layout_width="20dp"
                                android:layout_height="13dp"
                                android:src="@drawable/icon_watch_count"
                                android:layout_marginRight="6dp"/>
                        <TextView
                                android:id="@+id/count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3214"
                                android:textColor="#434242"
                                android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--报名-->
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_gravity="right|bottom"
                            android:layout_width="55dp"
                            android:layout_height="25dp"
                            android:text="报名"
                            android:textColor="#5f5e5e"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:background="@drawable/huodong_baoming_shape"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#9a9999"/>
</FrameLayout>