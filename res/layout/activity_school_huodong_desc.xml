<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#e9e7e7">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--header-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00ccff">
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:id="@+id/back">
                <ImageView
                        android:layout_width="10dp"
                        android:layout_height="16dp"
                        android:src="@drawable/icon_back"
                        android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="活动详情"/>
        </RelativeLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            <LinearLayout
                    android:background="#fffbfb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="20dp"/>
                <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#828080"
                        android:textSize="16sp"
                        android:layout_marginBottom="10dp"/>
                <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#747272"
                        android:textSize="13sp"
                        android:layout_marginBottom="15dp"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#9a9999"/>
                <!--time-->
                <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_time_yellow"
                            android:layout_marginRight="9dp"/>
                    <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#d6d2d2"
                            android:textSize="16sp"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#9a9999"/>
                <!--adress-->
                <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="24dp"
                            android:layout_height="28dp"
                            android:src="@drawable/icon_location_yellow"
                            android:layout_marginRight="9dp"/>
                    <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#d6d2d2"
                            android:textSize="16sp"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#9a9999"/>
                <!--free-->
                <LinearLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                    <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="16dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_free"
                            android:layout_marginRight="9dp"/>
                    <TextView
                            android:id="@+id/free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#d6d2d2"
                            android:textSize="16sp"
                            android:text="免费"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#9a9999"
                        android:layout_marginBottom="13dp"/>
                <TextView
                        android:layout_marginBottom="50dp"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/content"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="12sp"
                        android:textColor="#888686"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--收藏 报名-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="bottom">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/baoMing"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="报名"
                android:gravity="center"
                android:background="#00ccff"/>
    </LinearLayout>
</FrameLayout>
